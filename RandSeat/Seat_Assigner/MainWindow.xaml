<Window x:Class="Seat_Assigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seat_Assigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="LBoutput" HorizontalAlignment="Left" Height="165" Margin="386,88,0,0" VerticalAlignment="Top" Width="342" SelectionChanged="LBoutput_SelectionChanged"/>
        <ComboBox x:Name="CBname" HorizontalAlignment="Left" Margin="103,92,0,0" VerticalAlignment="Top" Width="256" SelectionChanged="CBname_SelectionChanged"/>
        <Label x:Name="LBLname" Content="Name" HorizontalAlignment="Left" Margin="56,88,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BTNName" Content="Read" HorizontalAlignment="Left" Margin="122,190,0,0" VerticalAlignment="Top" Width="124" Height="40" Click="BTNName_Click"/>
        <TextBox x:Name="txtNumbers" HorizontalAlignment="Left" Height="49" Margin="339,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="171,274,0,0" VerticalAlignment="Top" Width="75" Click="BtnClose_Click"/>

    </Grid>
</Window>
